<Window x:Class="PetShelter.View.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShelter.View"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Тварини">
                <Grid>
                    <DataGrid ItemsSource="{Binding  FirstStat.DefaultView}"></DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Вакцинація">
                <Grid>
                    <DataGrid ItemsSource="{Binding  SecondStat.DefaultView}"></DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Нові клієнти/тварини">
                <Grid>
                    <DataGrid ItemsSource="{Binding  ThirdStat.DefaultView}"></DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Стани">
                <Grid>
                    <DataGrid ItemsSource="{Binding  FourthStat.DefaultView}"></DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
