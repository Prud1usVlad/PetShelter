<Window x:Class="PetShelter.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShelter.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        DataContext="{Binding ViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition />
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid Background="#FFE5DDD3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="SortCriteria"
                          Margin="25, 5, 25, 35 "
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Height="20"
                          ItemsSource="{Binding SourceProperties}"></ComboBox>
                <CheckBox Name="SortTypeCheckBox"
                             Grid.Column="1" 
                             HorizontalAlignment="Right"
                             Margin="60,35,24,10">
                    <CheckBox.ToolTip>
                        <ToolTip Placement="Relative"
                                 Background="White"
                                 Foreground="Black"
                                 VerticalOffset="10"
                                 HorizontalOffset="10">
                            <TextBox>Сортувати за зростанням</TextBox>
                        </ToolTip>
                    </CheckBox.ToolTip>
                </CheckBox>
                <Button Height="20"
                        Grid.ColumnSpan="2"
                        Margin="25, 30, 45, 5" 
                        Click="SortButton_Click">Сортувати</Button>
                <Button Grid.Column="2"
                        Margin="12">Фільтрація</Button>
                <TextBox Name="SearchInput"
                         Height="20"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         Margin="25, 5, 25, 35"></TextBox>
                <Button Height="20"
                        Grid.Column="3"
                        Grid.ColumnSpan="2"
                        Margin="25, 30, 25, 5" Click="SearchButton_Click">Пошук</Button>
                
            </Grid>
            <DataGrid Name="MainGrid" 
                      AutoGenerateColumns="True"
                      ItemsSource="{Binding DataGridSource}"
                      SelectionChanged="MainGrid_SelectionChanged" 
                      MouseDown="MainGrid_MouseDown"
                      Grid.Row="1"/>
            <Grid Grid.Row="2"
                  Background="#FFE5DDD3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Додати"
                        Width="100"
                        Height="30"
                        Command="{Binding AddCommand}"
                        CommandParameter="{Binding ElementName=MainGrid, Path=ItemsSource}"
                        Name="AddButton"/>
                <Button Content="Редагувати"
                        Width="100"
                        Height="30"
                        Grid.Column="1"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding ElementName=MainGrid, Path=SelectedItem}"
                        Name="EditButton"/>
                <Button Content="Видалити"
                        Width="100"
                        Height="30"
                        Grid.Column="2"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding ElementName=MainGrid, Path=SelectedItem}"
                        Name="DeleteButton" />
            </Grid>
        </Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Вийти"></MenuItem>
            </MenuItem>
            <MenuItem Header="Дані">
                <MenuItem Header="Тварини" 
                          Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Кімнати" 
                          Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Стани" 
                          Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Стани тварин" 
                          Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Групи" 
                          Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Column="1"
                      Grid.Row="1">
            <StackPanel x:Name="DetailsPanel"
                        Background="#FFE5DDD3"></StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
