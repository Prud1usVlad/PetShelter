<Window x:Class="PetShelter.View.HelpingWindows.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShelter.View.HelpingWindows"
        mc:Ignorable="d"
        Title="DocumentWindow" Height="700" Width="840">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Label Content="{Binding HeaderText}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="25" 
               FontWeight="Bold"></Label>
        <RichTextBox Grid.Row="1"
                     Margin="10,5"
                     Name="TextBox">
        </RichTextBox>

        <Button x:Name="Save"
                Grid.Row="2"
                Width="100"
                Height="60" Click="Save_Click">Зберегти</Button>
        
    </Grid>
</Window>
